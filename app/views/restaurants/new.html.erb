<div class="container">
  <h1>Create a new restaurant!</h1>
  <%= simple_form_for(@restaurant) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%#= f.input :name, input_html: { class: 'text-light' 'min:0, min:5' } %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary mt-2' %>
  </div>

  <% end %>
</div>

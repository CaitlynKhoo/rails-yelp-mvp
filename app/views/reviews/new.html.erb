<div class="container">
<h1>New review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
    <%#= f.input :name, input_html: { class: 'text-light' 'min:0, min:5' } %>
    <%= f.input :rating %>
    <%= f.input :content %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary mt-2' %>
  </div>

  <% end %>

</div>
